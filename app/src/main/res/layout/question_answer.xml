<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No."
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:text="這裏是題目?" />

    <Button
        android:id="@+id/radio_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_gravity="center"
        android:onClick="click_a"
        android:tag="A"
        tools:text="A 答案" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_check_a0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="O"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_check_a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="X"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/radio_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_gravity="center"
        android:onClick="click_b"
        android:tag="B"
        tools:text="B 答案" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_check_b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="O"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_check_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="X"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/radio_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_gravity="center"
        android:onClick="click_c"
        android:tag="C"
        tools:text="C 答案" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_check_c0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="O"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_check_c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="X"
            android:visibility="invisible" />
    </LinearLayout>
</merge>